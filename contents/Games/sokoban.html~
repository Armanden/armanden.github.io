        }

        .game-cell.goal::after {
            content: 'â—¯';
            color: #4caf50;
            font-size: 20px;
        }

        .game-cell.player {
            background: #fff3e0;
        }

        .game-cell.box {
            background: #fff3e0;
        }

        .game-cell.box-on-goal {
            background: #c8e6c9;
        }

        .controls {
            margin: 30px 0;
        }

        .arrow-keys {
            display: inline-grid;
            grid-template-columns: repeat(3, 50px);
            gap: 5px;
