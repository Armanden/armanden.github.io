        }

        #gameBoard {
            display: inline-block;
            margin: 30px 0;
            background: #333;
            padding: 10px;
            border-radius: 10px;
            box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.5);
        }

        .game-row {
            display: flex;
            gap: 2px;
        }

        .game-cell {
            width: 40px;
            height: 40px;
            background: #666;
            border: 1px solid #444;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 24px;
            border-radius: 4px;
            position: relative;
        }

        .game-cell.wall {
            background: #222;
        }

        .game-cell.goal {
            background: #e8f5e9;
